<h1>Eat-da-Burger!</h1>

<h2>Burgers Not Devoured!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger-entry" name="burger_name">
  </div>



  <button type="submit">Add Burger</button>
</form>
